{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Invoice Schema",
  "type": "object",
  "required": [
    "client_name",
    "seller_name",
    "invoice_number",
    "items",
    "subtotal"
  ],
  "properties": {
    "client_name": {
      "type": "string",
      "description": "Client/Customer name"
    },
    "client_address": {
      "type": "string",
      "description": "Client address"
    },
    "seller_name": {
      "type": "string",
      "description": "Vendor/Seller name"
    },
    "seller_address": {
      "type": "string",
      "description": "Seller address"
    },
    "invoice_number": {
      "type": "string",
      "description": "Invoice number"
    },
    "invoice_date": {
      "type": "string",
      "description": "Invoice date (MM/DD/YYYY format)"
    },
    "due_date": {
      "type": ["string", "null"],
      "description": "Due date (MM/DD/YYYY format)"
    },
    "items": {
      "type": "array",
      "description": "Line items",
      "items": {
        "type": "object",
        "required": ["description", "quantity", "total_price"],
        "properties": {
          "description": {
            "type": "string",
            "description": "Item description"
          },
          "quantity": {
            "type": "number",
            "description": "Quantity"
          },
          "unit_price": {
            "type": ["number", "null"],
            "description": "Unit price"
          },
          "total_price": {
            "type": "number",
            "description": "Total price for line (after tax/gross amount)"
          },
          "tax": {
            "type": ["number", "null"],
            "description": "Tax for line"
          },
          "sku": {
            "type": ["string", "null"],
            "description": "SKU or product code"
          }
        }
      }
    },
    "subtotal": {
      "type": "object",
      "description": "Subtotal information",
      "required": ["total"],
      "properties": {
        "tax": {
          "type": ["number", "null"],
          "description": "Total tax"
        },
        "discount": {
          "type": ["number", "null"],
          "description": "Total discount"
        },
        "total": {
          "type": "number",
          "description": "Total invoice amount (after tax/gross amount)"
        }
      }
    },
    "currency": {
      "type": "string",
      "default": "USD",
      "description": "Currency code"
    },
    "net_terms": {
      "type": ["string", "null"],
      "default": "Net 30",
      "description": "Payment terms (e.g. Net 30, Net 60)"
    },
    "tax_rate": {
      "type": ["number", "null"],
      "description": "Tax rate (0..1)"
    }
  }
}

